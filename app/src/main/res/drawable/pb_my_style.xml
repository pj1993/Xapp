<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 进度条背景色 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/tzyk_progress_height_radius" />
            <solid android:color="@color/color_market_style_progress_bg" />
            <size android:height="@dimen/tzyk_progress_height" />
            <padding
                android:bottom="@dimen/tzyk_progress_height_padding"
                android:left="@dimen/tzyk_progress_height_padding"
                android:right="@dimen/tzyk_progress_height_padding"
                android:top="@dimen/tzyk_progress_height_padding" />
        </shape>
    </item>

    <!-- 第二进度条 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="270"
                    android:centerColor="#c6b7ff"
                    android:centerY="0.75"
                    android:endColor="#c3b2ff"
                    android:startColor="#b9a4ff" />
                <size android:height="10dp" />
            </shape>
        </clip>
    </item>

    <!-- 第一进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3.5dp" />

                <gradient
                    android:angle="45"
                    android:centerColor="@color/color_market_style_progress_center"
                    android:endColor="@color/color_market_style_progress_end"
                    android:startColor="@color/color_market_style_progress_start" />
                <size android:height="7dp" />
                <stroke
                    android:width="1dp"
                    android:color="@android:color/transparent" />
            </shape>
        </clip>
    </item>
</layer-list>
