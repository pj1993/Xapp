<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="12dp"
        android:layout_gravity="center"
        app:cardElevation="12dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="116dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingHorizontal="10dp"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:id="@+id/s_r_tag"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="38dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:textColor="#333333"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/s_r_tag"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                android:textSize="16dp"
                android:text="刚刚，国常会放大招！"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_tag"
                android:text="推荐"
                app:layout_constraintTop_toTopOf="@+id/tv_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                app:layout_constraintLeft_toRightOf="@+id/tv_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:background="#4D8FFF"
                android:layout_width="32dp"
                android:layout_height="16dp"/>


            <TextView
                android:id="@+id/tv_content"
                android:text="黄光裕的入狱成了国美发展历程中的转折点，根据中国连锁经营协会历年发布的中国连锁百强榜单。"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:lines="2"
                android:ellipsize="end"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                android:textColor="#333333"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_source"
                android:textColor="#999999"
                android:textSize="12dp"
                android:text="政策新闻"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_content"
                app:layout_constraintRight_toLeftOf="@+id/tv_time"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_time"
                android:textColor="#999999"
                android:textSize="12dp"
                android:text="11-19 10:26"
                app:layout_constraintLeft_toRightOf="@+id/tv_source"
                app:layout_constraintTop_toBottomOf="@+id/tv_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>