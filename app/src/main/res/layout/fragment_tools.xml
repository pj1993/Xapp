<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_status"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <ImageView
        android:id="@+id/iv_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="#f00"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:text="工具"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>



    <TextView
        android:id="@+id/btChatGpt"
        android:text="ChatGpt"
        android:gravity="center"
        android:layout_width="0dp"
        android:background="#2E4CAF50"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/iv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt2"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/bt2"
        android:gravity="center"
        android:layout_width="0dp"
        android:background="#18009688"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/iv_title"
        app:layout_constraintLeft_toRightOf="@+id/btChatGpt"
        app:layout_constraintRight_toLeftOf="@+id/bt3"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/bt3"
        android:gravity="center"
        android:layout_width="0dp"
        android:background="#278BC34A"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/iv_title"
        app:layout_constraintLeft_toRightOf="@+id/bt2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>