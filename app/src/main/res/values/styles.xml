<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        允许过度动画-->
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--冷启动优化，启动界面的主题,这里也可以直接是一张图片-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/m_window_background</item>
        <!--沉浸-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Placeholder">
        <item name="android:windowBackground">@drawable/ll_toolbar_placeholder</item>
    </style>

    <!--***************************************dialog 的style**************************************************************-->
    <style name="iOSAnimStyle">
        <item name="android:windowEnterAnimation">@anim/enter_ios_anim</item>
        <item name="android:windowExitAnimation">@anim/exit_ios_anim</item>
    </style>
    <style name="BottomDialog_Animation_Style" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_into</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_out</item>
    </style>
    <!--***************************************dialog 的style**************************************************************-->
</resources>
